
use test

db.restaurant.createIndex(fieldname : "text")

db.restaurant.dropIndex(fieldname : "text")

db.restaurant.find()

for (var i = 0; i < 15; i++) {
  db.restaurant.insert({ number : i })
}

EDITOR="/bin/vim"

edit moveit (func name)

function moveit(doc) {
  db.restaurant.insert(doc)
  db.restaurant.remove(doc)
}

